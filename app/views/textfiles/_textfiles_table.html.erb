<table class="pretty">
	<tr style="text-align: left;">
		<th><%= sortable "filepath" %></th>
		<th><%= sortable "owner" %></th>
	</tr>
	
<% @textfiles.each do |textfile| %>
  <tr>
  	<td><%= link_to textfile.filepath, textfile %></td>
		<td><span style="color: #666"><%= textfile.owner %></span></td>
  </tr>
<% end %>

</table>

<%= will_paginate @products %>