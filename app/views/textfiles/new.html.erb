<h1>New textfile</h1>

<% form_for(@textfile) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :filepath %><br />
    <%= f.text_field :filepath %>
  </p>
  <p>
    <%= f.label :content %><br />
    <%= f.text_area :content, :rows => 20, :cols => 80 %>
  </p>
  <p>
    <%= f.label :accessed_at %><br />
    <%= f.datetime_select :accessed_at %>
  </p>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', textfiles_path %>